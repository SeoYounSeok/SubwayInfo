<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/infod"

            >

            <TextView
                android:id="@+id/Previous_Station"
                android:layout_width="90dp"
                android:layout_height="41dp"
                android:layout_marginTop="29dp"
                android:layout_toLeftOf="@id/centertext"
                android:background="@drawable/infoa"
                android:gravity="center"
                android:text="이전"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/Next_Station"

                android:layout_width="90dp"
                android:layout_height="41dp"

                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/centertext"
                android:layout_marginRight="10dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/infoc"
                android:gravity="center"
                android:text="다음"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/centertext"
                android:layout_width="160dp"
                android:layout_height="59dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/infob"
                android:gravity="center"
                android:text="현재역"
                android:textColor="#000000"

                android:textStyle="bold" />


            <TextView
                android:id="@+id/Down1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:text="하행1 몇분 후" />

            <TextView
                android:id="@+id/Down2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:text="하행2 몇분 후" />

            <TextView
                android:id="@+id/Up1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:text="상행1 몇분 후" />

            <TextView
                android:id="@+id/Up2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="140dp"
                android:text="상행2 몇분 후 " />

        </RelativeLayout>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <RelativeLayout
                android:layout_width="2000dp"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/traina" />

                <ImageView
                    android:layout_width="1080dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="370dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/trainb" />

                <ImageView
                    android:layout_width="360dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="1450dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/trainc" />

                <ImageView
                    android:id="@+id/plat1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="350dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/trainwindow" />

                <ImageView
                    android:id="@+id/plat2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/plat1"
                    android:background="@drawable/trainwindow" />

                <ImageView
                    android:id="@+id/plat3"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/plat2"
                    android:background="@drawable/trainwindow" />

                <ImageView
                    android:id="@+id/plat4"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/plat3"
                    android:background="@drawable/trainwindow" />

                <ImageView
                    android:id="@+id/plat5"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/plat4"
                    android:background="@drawable/trainwindow" />

                <ImageView
                    android:id="@+id/plat6"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/plat5"
                    android:background="@drawable/trainwindow" />

                <ImageView
                    android:id="@+id/plat7"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/plat6"
                    android:background="@drawable/trainwindow" />

                <ImageView
                    android:id="@+id/plat8"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@id/plat7"
                    android:background="@drawable/trainwindow" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat1"
                    android:layout_marginLeft="350dp"
                    android:text="1번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat2"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/plat1"
                    android:text="2번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat3"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/plat2"
                    android:text="3번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat4"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/plat3"
                    android:text="4번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat5"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/plat4"
                    android:text="5번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat6"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/plat5"
                    android:text="6번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat7"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/plat6"
                    android:text="7번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_below="@id/plat8"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/plat7"
                    android:text="8번칸"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/Information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="혼잡도: 존나높음 \n 습도: 99% \n 온도: 99도 \n " />

            <TextView
                android:id="@+id/Information2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="혼잡도: 존나높음 \n 습도: 99% \n 온도: 99도 \n " />
        </LinearLayout>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>