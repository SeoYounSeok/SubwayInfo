<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/infod"

            >

            <TextView
                android:layout_width="90dp"
                android:layout_height="41dp"
                android:layout_marginTop="29dp"
                android:layout_toLeftOf="@id/centertext"
                android:background="@drawable/infoa"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="이전역" />

            <TextView
                android:layout_width="90dp"
                android:layout_height="41dp"

                android:layout_alignParentRight="true"
                android:layout_alignRight="@+id/centertext"
                android:layout_marginRight="10dp"
                android:layout_marginTop="29dp"
                android:background="@drawable/infoc"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:text="다음역" />

            <TextView
                android:id="@+id/centertext"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/infob"
                android:gravity="center"
                android:textColor="#000000"
                android:textStyle="bold"

                android:text="현재역" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:text="어디행 10:10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="140dp"
                android:text="어디행 10:10" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="100dp"
                android:text="어디행 10:30" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="140dp"
                android:text="어디행 10:30" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="410dp"
                    android:layout_marginLeft="35dp"
                    android:layout_marginTop="35dp"
                    android:background="@color/colorblack" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorRed" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="90dp"
                    android:background="@color/colorRed" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="140dp"
                    android:background="@color/colorRed" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="190dp"
                    android:background="@color/colorRed" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="240dp"
                    android:background="@color/colorRed" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="290dp"
                    android:background="@color/colorRed" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="340dp"
                    android:background="@color/colorRed" />

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="390dp"
                    android:background="@color/colorRed" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="400dp"
                    android:layout_marginLeft="200dp"
                    android:layout_marginTop="200dp"

                    android:text="혼잡도: 존나높음 \n 습도: 99% \n 온도: 99도 \n " />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>